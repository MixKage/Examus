<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.app.examus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/examusicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/examusicon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OSexamen">
        <activity
            android:name=".Login"
            android:exported="true" />
        <activity
            android:name=".Tutor"
            android:exported="true" />
        <activity
            android:name=".NewMain"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.OSexamen.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShowQuest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Spisok"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Test"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>